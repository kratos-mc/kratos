{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true,
    "declarationDir": "./types"
  }
}
